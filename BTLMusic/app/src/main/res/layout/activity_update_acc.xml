<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.UpdateAcc">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa thông tin tài khoản"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="50sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text="Tên tài khoản"/>
        <EditText
            android:id="@+id/edt_UpdateNameAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:hint="Nhập tên tài khoản"/></LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text="Mật khẩu"/>
        <EditText
            android:id="@+id/edt_UpdatePassAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:inputType="textPassword"
            android:hint="Nhập mật khẩu"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text="Nhập lại mật khẩu"/>
        <EditText
            android:id="@+id/edt_UpdatePassConfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:inputType="textPassword"
            android:hint="Nhập lại mật khẩu"/></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text="Số điện thoại"/>
        <EditText
            android:id="@+id/edt_UpdatePhoneAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:inputType="number"
            android:textColor="@color/black"
            android:enabled="false"
            android:hint="Nhập SĐT"/>
    </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_UpdateAcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Xác nhận"/>

</LinearLayout>