<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SongActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/song_btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white_BackGroud"
            app:srcCompat="@drawable/exit" />

        <TextView
            android:id="@+id/song_txtNameTopSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10sp"
            android:text="Song"
            android:layout_weight="9"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/song_btnFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white_BackGroud"
            app:srcCompat="@drawable/favorite_border" />
    </LinearLayout>

    <ImageView
        android:id="@+id/song_imgSong"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:padding="20sp"
        android:src="@drawable/test"/>
    <TextView
        android:id="@+id/song_txtNameSong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:textSize="30sp"
        android:text="Tên bài hát"/>
    <TextView
        android:id="@+id/song_txtNameArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:text="Tên tác giả"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:orientation="vertical"
        android:padding="20sp">

        <SeekBar
            android:id="@+id/song_seekBar"
            android:layout_width="match_parent"
            android:layout_height="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/song_txtTimePlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_weight="1"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/song_txtTimeMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/song_btnPre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white_BackGroud"
                app:srcCompat="@drawable/previous" />

            <ImageButton
                android:id="@+id/song_btnPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white_BackGroud"
                app:srcCompat="@drawable/pause" />

            <ImageButton
                android:id="@+id/song_btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white_BackGroud"
                app:srcCompat="@drawable/next" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>